{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist/scripts",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["ES2022", "DOM"]
  },
  "include": ["scripts/**/*", "src/types/**/*", "src/services/**/*", "src/utils/**/*", "src/components/LogViewer.ts"],
  "exclude": ["node_modules", "dist"]
}
